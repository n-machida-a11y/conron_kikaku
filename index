    <!-- ビュー2: カタログ編集 -->
    <div id="catalog-view" class="view-section min-h-screen pb-20 hidden">
        <div class="fixed top-0 left-0 right-0 bg-gray-800 text-white p-3 z-50 shadow-lg no-print">
            <div class="container mx-auto flex flex-wrap justify-between items-center gap-2">
                <div class="flex items-center gap-4">
                    <button id="back-to-list" class="text-gray-300 hover:text-white flex items-center gap-2"><i class="fas fa-arrow-left"></i> <span class="hidden sm:inline">一覧に戻る</span></button>
                    <span class="font-bold text-lg border-l border-gray-600 pl-4">ナカノ企画書 編集</span>
                </div>
                <div class="flex items-center gap-2 bg-gray-700 p-1 rounded-lg">
                    <div class="flex items-center mr-4 border-r border-gray-500 pr-4">
                        <span class="text-xs mr-2 text-gray-300">レイアウト:</span>
                        <button id="layout-6" class="px-3 py-1 text-sm bg-blue-600 rounded-l text-white border-r border-blue-700">6面 (3×2)</button>
                        <button id="layout-8" class="px-3 py-1 text-sm bg-gray-600 hover:bg-gray-500 rounded-r text-white">8面 (4×2)</button>
                    </div>
                    <button id="auto-sort-category" class="px-3 py-1 text-sm bg-indigo-700 hover:bg-indigo-600 rounded text-white transition"><i class="fas fa-magic mr-1"></i>カテゴリ分け</button>
                    <button id="add-page-btn" class="px-3 py-1 text-sm bg-gray-600 hover:bg-gray-500 rounded text-white transition"><i class="fas fa-plus mr-1"></i>ページ追加</button>
                </div>
                <button onclick="window.print()" class="bg-blue-600 hover:bg-blue-500 text-white font-bold py-1.5 px-5 rounded shadow flex items-center gap-2"><i class="fas fa-print"></i> 印刷</button>
            </div>
