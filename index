    <script>
        // --- グローバル変数 ---
        let allProducts = [];
        let selectedProductIds = new Set();
        let catalogPages = []; 
        let sortableInstances = [];
        let currentLayout = 'layout6'; // 初期値: 6面
        
        // 編集中のデータ保持用
        let editingProduct = null;

        const els = {
            mainView: document.getElementById('main-view'),
            catalogView: document.getElementById('catalog-view'),
            productGrid: document.getElementById('product-grid'),
            catalogContainer: document.getElementById('catalog-container'),
            selectionBar: document.getElementById('selection-bar'),
            selectedCount: document.getElementById('selected-count'),
            search: document.getElementById('search'),
            catFilter: document.getElementById('category-filter'),
            seaFilter: document.getElementById('season-filter'),
            loading: document.getElementById('loading-spinner'),
            modal: document.getElementById('modal'),
            modalBody: document.getElementById('modal-body'),
            btn6: document.getElementById('layout-6'),
            btn8: document.getElementById('layout-8')
        };

        document.addEventListener('DOMContentLoaded', () => {
            fetchData();
            setupEventListeners();
        });

        function setupEventListeners() {
            els.search.addEventListener('input', renderList);
            els.catFilter.addEventListener('change', renderList);
            els.seaFilter.addEventListener('change', renderList);
            document.getElementById('clear-selection').addEventListener('click', () => {
                selectedProductIds.clear();
                updateSelectionUI();
                renderList();
            });
            document.getElementById('create-catalog-btn').addEventListener('click', initCatalogView);
            document.getElementById('back-to-list').addEventListener('click', showListView);
            document.getElementById('add-page-btn').addEventListener('click', () => { addNewPage(); renderCatalogPages(); });
            document.getElementById('auto-sort-category').addEventListener('click', autoSortByCategory);
            
            els.btn6.addEventListener('click', () => changeLayout('layout6'));
            els.btn8.addEventListener('click', () => changeLayout('layout8'));
            
            document.getElementById('close-modal').addEventListener('click', () => els.modal.classList.add('hidden'));
        }

        function fetchData() {
            els.loading.classList.remove('hidden');
            google.script.run
                .withSuccessHandler(data => {
                    els.loading.classList.add('hidden');
                    if (data.error) { alert(data.error); return; }
                    allProducts = data;
                    initFilters(data);
                    renderList();
                })
                .withFailureHandler(err => {
                    els.loading.classList.add('hidden');
                    alert("読み込みエラー: " + err);
                })
                .getProductData();
        }

        function initFilters(data) {
            const cats = [...new Set(data.map(p => p.category))].filter(Boolean).sort();
            const seas = [...new Set(data.map(p => p.season))].filter(Boolean).sort();
            cats.forEach(c => { const opt = document.createElement('option'); opt.value = c; opt.textContent = c; els.catFilter.appendChild(opt); });
            seas.forEach(s => { const opt = document.createElement('option'); opt.value = s; opt.textContent = s; els.seaFilter.appendChild(opt); });
        }

        function renderList() {
            const term = els.search.value.toLowerCase();
            const cat = els.catFilter.value;
            const sea = els.seaFilter.value;
            const filtered = allProducts.filter(p => {
                const matchTerm = p.name.toLowerCase().includes(term) || String(p.id).toLowerCase().includes(term);
                const matchCat = cat === 'all' || p.category === cat;
                const matchSea = sea === 'all' || p.season === sea;
                return matchTerm && matchCat && matchSea;
            });

            els.productGrid.innerHTML = '';
            filtered.forEach(p => {
                const isSelected = selectedProductIds.has(p.id);
                const card = document.createElement('div');
                card.className = `cat-card shadow-md hover:shadow-lg transition-shadow ${isSelected ? 'selected' : ''}`;
                
                const checkboxHtml = `
                    <div class="absolute top-1 right-1 z-20">
                        <div class="w-6 h-6 rounded-full border-2 flex items-center justify-center transition-all shadow-sm ${isSelected ? 'bg-indigo-600 border-indigo-600' : 'bg-white/80 border-gray-400 hover:border-indigo-500'}">
                            <i class="fas fa-check text-white text-[10px] ${isSelected ? '' : 'hidden'}"></i>
                        </div>
                    </div>
                `;
                card.innerHTML = checkboxHtml + createCardHTML(p, false);
                card.addEventListener('click', () => toggleSelection(p.id));
                els.productGrid.appendChild(card);
            });
            if(filtered.length === 0) document.getElementById('no-results').classList.remove('hidden');
            else document.getElementById('no-results').classList.add('hidden');
        }

        function toggleSelection(id) {
            if (selectedProductIds.has(id)) selectedProductIds.delete(id);
            else selectedProductIds.add(id);
            updateSelectionUI();
            renderList();
        }

        function updateSelectionUI() {
            const count = selectedProductIds.size;
            els.selectedCount.textContent = count;
            if (count > 0) els.selectionBar.classList.remove('translate-y-full');
            else els.selectionBar.classList.add('translate-y-full');
        }

        function changeLayout(mode) {
            if (currentLayout === mode) return;
            currentLayout = mode;
            
            if (mode === 'layout6') {
                els.btn6.classList.add('bg-blue-600', 'border-r', 'border-blue-700'); 
                els.btn6.classList.remove('bg-gray-600', 'hover:bg-gray-500');
                els.btn8.classList.add('bg-gray-600', 'hover:bg-gray-500'); 
                els.btn8.classList.remove('bg-blue-600');
            } else {
                els.btn8.classList.add('bg-blue-600'); 
                els.btn8.classList.remove('bg-gray-600', 'hover:bg-gray-500');
                els.btn6.classList.add('bg-gray-600', 'hover:bg-gray-500'); 
                els.btn6.classList.remove('bg-blue-600', 'border-r', 'border-blue-700');
            }
            
            const allItems = catalogPages.flat().filter(p => p !== null);
            repaginate(allItems);
            renderCatalogPages();
        }

        function initCatalogView() {
            const selectedItems = allProducts.filter(p => selectedProductIds.has(p.id));
            if (selectedItems.length === 0) return;
            repaginate(selectedItems);
            renderCatalogPages();
            els.mainView.classList.remove('active');
            els.catalogView.classList.remove('hidden');
            els.catalogView.classList.add('active');
            window.scrollTo(0, 0);
        }
        
        function repaginate(items) {
            catalogPages = [];
            const perPage = currentLayout === 'layout6' ? 6 : 8;
            for (let i = 0; i < items.length; i += perPage) catalogPages.push(items.slice(i, i + perPage));
            if (catalogPages.length === 0) catalogPages.push([]);
        }

        function showListView() {
            els.catalogView.classList.remove('active');
            els.catalogView.classList.add('hidden');
            els.mainView.classList.add('active');
        }

        function addNewPage() { catalogPages.push([]); }

        function autoSortByCategory() {
            const selectedItems = catalogPages.flat().filter(p => p !== null);
            if (selectedItems.length === 0) return;
            const groups = {};
            selectedItems.forEach(p => {
                const cat = p.category || 'その他';
                if (!groups[cat]) groups[cat] = [];
                groups[cat].push(p);
            });
            const perPage = currentLayout === 'layout6' ? 6 : 8;
            catalogPages = [];
            Object.keys(groups).sort().forEach(cat => {
                const items = groups[cat];
                for (let i = 0; i < items.length; i += perPage) catalogPages.push(items.slice(i, i + perPage));
            });
            renderCatalogPages();
            alert("カテゴリごとにページを分けました！");
        }

        function renderCatalogPages() {
            els.catalogContainer.innerHTML = '';
            sortableInstances.forEach(s => s.destroy());
            sortableInstances = [];
            const perPage = currentLayout === 'layout6' ? 6 : 8;
            const gridClass = currentLayout === 'layout6' ? 'product-grid-6' : 'product-grid-8';

            catalogPages.forEach((pageItems, pageIndex) => {
                const wrapper = document.createElement('div');
                wrapper.className = 'sheet-wrapper';
                const header = document.createElement('div');
                header.className = 'sheet-header no-print';
                header.innerHTML = `<span>PAGE ${pageIndex + 1} <span class="text-xs font-normal opacity-70 ml-2">(${pageItems.length} items)</span></span>${catalogPages.length > 1 ? `<button class="text-xs bg-red-500 hover:bg-red-400 px-2 py-1 rounded" onclick="deletePage(${pageIndex})">削除</button>` : ''}`;
                
                const sheet = document.createElement('div');
                sheet.className = 'sheet';
                const paperHeader = document.createElement('div');
                paperHeader.className = 'h-[12mm] border-2 border-black flex items-center justify-between px-2 mb-[2mm] font-bold text-[14pt]';
                paperHeader.innerHTML = `<span>ナカノ企画書 (2025AW)</span><div class="text-xs text-right leading-tight">No ${pageIndex + 1}</div>`;
                sheet.appendChild(paperHeader);

                const grid = document.createElement('div');
                grid.className = gridClass;
                grid.dataset.pageIndex = pageIndex;

                const displayItems = [...pageItems];
                while (displayItems.length < perPage) displayItems.push(null);

                displayItems.forEach((p) => {
                    const card = document.createElement('div');
                    if (p) {
                        card.className = 'cat-card';
                        card.dataset.id = p.id;
                        card.innerHTML = createCardHTML(p, true); 
                    } else {
                        card.className = 'cat-card empty-slot';
                    }
                    grid.appendChild(card);
                });

                sheet.appendChild(grid);
                wrapper.appendChild(header);
                wrapper.appendChild(sheet);
                els.catalogContainer.appendChild(wrapper);

                const sortable = new Sortable(grid, {
                    group: 'shared-catalog',
                    animation: 150,
                    ghostClass: 'sortable-ghost',
                    draggable: '.cat-card:not(.empty-slot)',
                    onEnd: function () { updateCatalogDataFromDOM(); }
                });
                sortableInstances.push(sortable);
            });
        }

        function updateCatalogDataFromDOM() {
            const newPages = [];
            const gridSelector = currentLayout === 'layout6' ? '.product-grid-6' : '.product-grid-8';
            document.querySelectorAll(gridSelector).forEach(grid => {
                const pageItems = [];
                grid.querySelectorAll('.cat-card').forEach(card => {
                    const id = card.dataset.id;
                    if (id) {
                        const product = allProducts.find(p => p.id == id);
                        if (product) pageItems.push(product);
                    }
                });
                newPages.push(pageItems);
            });
            catalogPages = newPages;
        }

        function deletePage(index) {
            if (!confirm("このページを削除しますか？")) return;
            catalogPages.splice(index, 1);
            renderCatalogPages();
        }

        // --- カード生成ロジック ---
        function createCardHTML(p, isCatalogMode) {
            // 画像配列から最大3枚取得
            const imgs = (p.images || []).slice(0, 3);
            
            // 画像タグ生成関数
            const getImgTag = (src) => {
                if (!src) return `<div class="img-placeholder">No Img</div>`;
                if (src.includes("placehold.co")) return `<div class="img-placeholder text-red-400">Err</div>`;
                return `<img src="${src}" class="img-content">`;
            };

            const imgMain = getImgTag(imgs[0]);
            const imgSub1 = getImgTag(imgs[1]);
            const imgSub2 = getImgTag(imgs[2]);

            // ----------------------------------------
            // パターンA: カタログ作成用 (Excel提案書風 - 左右分割 + テーブル組 + 画像3枚)
            // ----------------------------------------
            if (isCatalogMode) {
                const composition = p.composition !== "N/A" ? p.composition : "";
                const inseam = p.inseam ? p.inseam : "";
                const retailPrice = p.price_retail ? `¥${p.price_retail.toLocaleString()}` : "-";
                const wholesalePrice = p.price_wholesale ? `@${p.price_wholesale.toLocaleString()}` : "-";
                
                // 発注マトリクスの構築
                const sizes = p.sizes.length > 0 ? p.sizes : ['F'];
                const colors = p.colors.length > 0 ? p.colors : ['-'];

                // サイズ列ヘッダー (左上は空欄)
                let sizeHeaderHtml = '<th class="cl-col-color"></th>'; 
                sizes.forEach(s => {
                    sizeHeaderHtml += `<th>${s}</th>`;
                });
                sizeHeaderHtml += '<th class="cl-col-total">計</th>';

                // マトリクス行
                let rowsHtml = '';
                colors.forEach(c => {
                    let cells = `<td class="cl-col-color">${c}</td>`;
                    sizes.forEach(() => {
                        cells += `<td></td>`;
                    });
                    cells += `<td></td>`;
                    rowsHtml += `<tr>${cells}</tr>`;
                });

                return `
                    <div class="catalog-layout relative group">
                        <!-- 編集ボタン -->
                        <button onclick="openEditModal('${p.id}')" class="edit-btn">
                            <i class="fas fa-pencil-alt"></i> 編集
                        </button>
                    
                        <!-- 上段: 画像とスペック (テーブル組) -->
                        <div class="cl-top-section">
                            <div class="cl-image-area">
                                <div class="img-grid-container">
                                    <div class="img-cell img-cell-main">
                                        ${imgMain}
                                        ${p.kariHinban ? `<div class="absolute top-1 left-1 bg-red-100 text-red-600 px-1 text-[8px] rounded border border-red-200 font-bold z-10">代替品: ${p.kariHinban}</div>` : ''}
                                    </div>
                                    <div class="img-cell img-cell-sub1">
                                        ${imgSub1}
                                    </div>
                                    <div class="img-cell img-cell-sub2">
                                        ${imgSub2}
                                    </div>
                                </div>
                            </div>
                            <div class="cl-spec-area">
                                <table class="cl-spec-table">
                                    <tr>
                                        <th>品番</th>
                                        <td class="cl-val-lg">${p.id}</td>
                                    </tr>
                                    <tr>
                                        <th>品名</th>
                                        <td style="white-space:normal;">${p.name}</td>
                                    </tr>
                                    <tr>
                                        <th>混率</th>
                                        <td style="white-space:normal; font-size:0.9em;">${composition}</td>
                                    </tr>
                                    <tr>
                                        <th>股下</th>
                                        <td>${inseam}</td>
                                    </tr>
                                    <tr>
                                        <th>参考売価</th>
                                        <td class="cl-price-val">${retailPrice}</td>
                                    </tr>
                                    <tr>
                                        <th>下代</th>
                                        <td class="cl-wholesale-val">${wholesalePrice}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        
                        <!-- 下段: マトリクス表 -->
                        <div class="cl-matrix-area">
                            <div class="cl-matrix-header-row">
                                <span class="cl-sub-id">${p.id}</span>
                            </div>
                            <table class="cl-order-table">
                                <thead><tr>${sizeHeaderHtml}</tr></thead>
                                <tbody>${rowsHtml}</tbody>
                            </table>
                        </div>
                    </div>
                `;
            } 
            
            // ----------------------------------------
            // パターンB: 一覧画面用 (元のテーブル形式) - ※一覧画面では画像1枚のみ表示のまま
            // ----------------------------------------
            else {
                return `
                    <div class="h-[60%] border-b border-black pointer-events-none">
                        <table class="mini-table">
                            <tr><th colspan="3" class="header-status">${p.status}</th></tr>
                            <tr>
                                <td class="bg-white text-center w-[25%]">品番</td>
                                <td class="text-center font-bold w-[35%]">${p.id}</td>
                                <td class="text-center w-[40%] border-b-0">展開色</td>
                            </tr>
                            <tr>
                                <td class="bg-white text-center">上代</td>
                                <td class="text-center font-bold">¥${p.price_retail.toLocaleString()}</td>
                                <td rowspan="5" class="p-[1px] align-top leading-[1.2] whitespace-normal">
                                    ${p.colors.join('<br>')}
                                </td>
                            </tr>
                            <tr>
                                <td class="bg-white text-center">下代</td>
                                <td class="text-center price-wholesale">¥${p.price_wholesale.toLocaleString()}</td>
                            </tr>
                            <tr><td class="bg-white text-center">生地No</td><td class="text-center scale-90 origin-left">${p.fabric_number}</td></tr>
                            <tr><td class="bg-white text-center">素材名</td><td class="text-center scale-90 origin-left">${p.material_name}</td></tr>
                            <tr><td class="bg-white text-center">混率</td><td class="text-center scale-90 origin-left">${p.composition || '-'}</td></tr>
                            <tr>
                                <td class="bg-white text-center border-t border-black">サイズ</td>
                                <td colspan="2" class="text-center border-t border-black">${p.sizes.join(' ')}</td>
                            </tr>
                            <tr>
                                <td class="bg-white text-center border-t border-black">品名</td>
                                <td colspan="2" class="text-left pl-1 font-bold border-t border-black truncate">${p.name}</td>
                            </tr>
                        </table>
                    </div>
                    <div class="h-[40%] relative p-[2px] flex justify-center items-end gap-1 pointer-events-none">
                        ${imgMain} <!-- 一覧ではメイン1枚のみ -->
                    </div>
                `;
            }
        }

        // --- 編集モーダル関連 ---
        function openEditModal(id) {
            const product = allProducts.find(p => p.id == id);
            if (!product) return;
            
            // 編集用にディープコピー
            editingProduct = JSON.parse(JSON.stringify(product));
            
            renderEditModalContent();
            els.modal.classList.remove('hidden');
        }
        
        function renderEditModalContent() {
            if (!editingProduct) return;
            const p = editingProduct;

            els.modalBody.innerHTML = `
                <h3 class="text-xl font-bold mb-4">商品情報の編集</h3>
                <form id="edit-form" class="space-y-4">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">品番 (変更不可)</label>
                            <input type="text" value="${p.id}" class="mt-1 block w-full bg-gray-100 border border-gray-300 rounded p-2" disabled>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">品名</label>
                            <input type="text" id="edit-name" value="${p.name}" class="mt-1 block w-full border border-gray-300 rounded p-2" onchange="updateEditingProduct('name', this.value)">
                        </div>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">参考売価 (数値)</label>
                            <input type="number" id="edit-retail" value="${p.price_retail || ''}" class="mt-1 block w-full border border-gray-300 rounded p-2" onchange="updateEditingProduct('price_retail', Number(this.value))">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">下代 (数値)</label>
                            <input type="number" id="edit-wholesale" value="${p.price_wholesale || ''}" class="mt-1 block w-full border border-gray-300 rounded p-2" onchange="updateEditingProduct('price_wholesale', Number(this.value))">
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">混率</label>
                            <input type="text" id="edit-composition" value="${p.composition || ''}" class="mt-1 block w-full border border-gray-300 rounded p-2" onchange="updateEditingProduct('composition', this.value)">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">股下</label>
                            <input type="text" id="edit-inseam" value="${p.inseam || ''}" class="mt-1 block w-full border border-gray-300 rounded p-2" onchange="updateEditingProduct('inseam', this.value)">
                        </div>
                    </div>

                    <!-- サイズ編集 -->
                    <div class="border-t pt-2 mt-2">
                        <label class="block text-sm font-bold text-gray-700 mb-2">サイズ展開</label>
                        <div class="flex flex-wrap gap-2 mb-2">
                            ${p.sizes.map((s, i) => `
                                <div class="flex items-center bg-blue-50 border border-blue-200 rounded px-2 py-1">
                                    <span class="text-sm mr-2">${s}</span>
                                    <button type="button" onclick="removeEditItem('sizes', ${i})" class="text-red-500 hover:text-red-700 font-bold">&times;</button>
                                </div>
                            `).join('')}
                        </div>
                        <div class="flex gap-2">
                            <input type="text" id="new-size-input" placeholder="サイズ追加 (例: XL)" class="flex-1 border border-gray-300 rounded px-2 py-1 text-sm">
                            <button type="button" onclick="addEditItem('sizes')" class="bg-blue-600 text-white px-3 py-1 rounded text-sm hover:bg-blue-700">追加</button>
                        </div>
                    </div>

                    <!-- カラー編集 -->
                    <div class="border-t pt-2 mt-2">
                        <label class="block text-sm font-bold text-gray-700 mb-2">カラー展開</label>
                        <div class="flex flex-wrap gap-2 mb-2">
                            ${p.colors.map((c, i) => `
                                <div class="flex items-center bg-green-50 border border-green-200 rounded px-2 py-1">
                                    <span class="text-sm mr-2">${c}</span>
                                    <button type="button" onclick="removeEditItem('colors', ${i})" class="text-red-500 hover:text-red-700 font-bold">&times;</button>
                                </div>
                            `).join('')}
                        </div>
                        <div class="flex gap-2">
                            <input type="text" id="new-color-input" placeholder="カラー追加 (例: ブラック)" class="flex-1 border border-gray-300 rounded px-2 py-1 text-sm">
                            <button type="button" onclick="addEditItem('colors')" class="bg-green-600 text-white px-3 py-1 rounded text-sm hover:bg-green-700">追加</button>
                        </div>
                    </div>

                    <div class="flex justify-end pt-4 border-t mt-4 gap-3">
                        <button type="button" onclick="document.getElementById('modal').classList.add('hidden')" class="px-4 py-2 text-gray-600 hover:bg-gray-100 rounded">キャンセル</button>
                        <button type="button" onclick="saveEditedProduct()" class="px-6 py-2 bg-indigo-600 text-white rounded font-bold hover:bg-indigo-700 shadow">保存して反映</button>
                    </div>
                </form>
            `;
        }
        
        function updateEditingProduct(key, value) {
            if(editingProduct) editingProduct[key] = value;
        }
        
        function removeEditItem(type, index) {
            if(!editingProduct) return;
            editingProduct[type].splice(index, 1);
            renderEditModalContent(); // 再描画
        }
        
        function addEditItem(type) {
            if(!editingProduct) return;
            const inputId = type === 'sizes' ? 'new-size-input' : 'new-color-input';
            const input = document.getElementById(inputId);
            const val = input.value.trim();
            if(val) {
                editingProduct[type].push(val);
                renderEditModalContent(); // 再描画
            }
        }
        
        function saveEditedProduct() {
            if(!editingProduct) return;
            
            // allProductsの該当データを更新
            const idx = allProducts.findIndex(p => p.id === editingProduct.id);
            if(idx > -1) {
                allProducts[idx] = editingProduct;
            }
            
            // カタログ再描画
            // updateCatalogDataFromDOM() を呼ぶとDOMの状態が優先されるため、
            // ここでは catalogPages 内のデータも更新する必要がある
            updateCatalogPagesData(editingProduct);

            renderCatalogPages();
            els.modal.classList.add('hidden');
        }
        
        function updateCatalogPagesData(updatedProduct) {
            // catalogPages内の該当商品を差し替え
            catalogPages = catalogPages.map(page => 
                page.map(p => (p && p.id === updatedProduct.id) ? updatedProduct : p)
            );
        }

    </script>
</body>
</html>
