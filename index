    <script>
        // --- グローバル変数 ---
        let allProducts = [];
        let colorMaster = {}; // カラー名 -> Base64画像 のマップ
        let selectedProductIds = new Set();
        let catalogPages = []; 
        let sortableInstances = [];
        let currentLayout = 'layout6';
        
        // 編集中のデータ保持用
        let editingProduct = null;
        let pendingColorUpload = null; // { colorName: string }
        
        // 保存キー
        const STORAGE_KEY = 'nakano_kikaku_saves_v1';

        const els = {
            mainView: document.getElementById('main-view'),
            catalogView: document.getElementById('catalog-view'),
            productGrid: document.getElementById('product-grid'),
            catalogContainer: document.getElementById('catalog-container'),
            selectionBar: document.getElementById('selection-bar'),
            selectedCount: document.getElementById('selected-count'),
            search: document.getElementById('search'),
            catFilter: document.getElementById('category-filter'),
            seaFilter: document.getElementById('season-filter'),
            loading: document.getElementById('loading-spinner'),
            modal: document.getElementById('modal'),
            modalBody: document.getElementById('modal-body'),
            btn6: document.getElementById('layout-6'),
            btn8: document.getElementById('layout-8'),
            catalogTitleInput: document.getElementById('catalog-title-input'),
            saveCatalogBtn: document.getElementById('save-catalog-btn'),
            showSavedListBtn: document.getElementById('show-saved-list-btn'),
            colorInput: document.getElementById('color-img-input')
        };

        document.addEventListener('DOMContentLoaded', () => {
            fetchData();
            setupEventListeners();
        });

        function setupEventListeners() {
            els.search.addEventListener('input', renderList);
            els.catFilter.addEventListener('change', renderList);
            els.seaFilter.addEventListener('change', renderList);
            document.getElementById('clear-selection').addEventListener('click', () => {
                selectedProductIds.clear();
                updateSelectionUI();
                renderList();
            });
            document.getElementById('create-catalog-btn').addEventListener('click', initCatalogView);
            document.getElementById('back-to-list').addEventListener('click', showListView);
            document.getElementById('add-page-btn').addEventListener('click', () => { addNewPage(); renderCatalogPages(); });
            document.getElementById('auto-sort-category').addEventListener('click', autoSortByCategory);
            
            els.btn6.addEventListener('click', () => changeLayout('layout6'));
            els.btn8.addEventListener('click', () => changeLayout('layout8'));
            
            document.getElementById('close-modal').addEventListener('click', () => els.modal.classList.add('hidden'));
            
            els.saveCatalogBtn.addEventListener('click', saveCurrentCatalog);
            els.showSavedListBtn.addEventListener('click', showSavedCatalogs);

            // カラー画像アップロード
            els.colorInput.addEventListener('change', handleColorUploadFile);
        }

        function fetchData() {
            els.loading.classList.remove('hidden');
            google.script.run
                .withSuccessHandler(data => {
                    els.loading.classList.add('hidden');
                    if (data.error) { alert(data.error); return; }
                    
                    // GASから { products: [], colorImages: {} } の形式で返ってくる想定
                    if (data.products) {
                        allProducts = data.products;
                        colorMaster = data.colorImages || {};
                    } else {
                        // 旧形式対応(念のため)
                        allProducts = data;
                    }
                    
                    initFilters(allProducts);
                    renderList();
                })
                .withFailureHandler(err => {
                    els.loading.classList.add('hidden');
                    alert("読み込みエラー: " + err);
                })
                .getProductData();
        }

        function initFilters(data) {
            const cats = [...new Set(data.map(p => p.category))].filter(Boolean).sort();
            const seas = [...new Set(data.map(p => p.season))].filter(Boolean).sort();
            cats.forEach(c => { const opt = document.createElement('option'); opt.value = c; opt.textContent = c; els.catFilter.appendChild(opt); });
            seas.forEach(s => { const opt = document.createElement('option'); opt.value = s; opt.textContent = s; els.seaFilter.appendChild(opt); });
        }

        function renderList() {
            const term = els.search.value.toLowerCase();
            const cat = els.catFilter.value;
            const sea = els.seaFilter.value;
            const filtered = allProducts.filter(p => {
                const matchTerm = p.name.toLowerCase().includes(term) || String(p.id).toLowerCase().includes(term);
                const matchCat = cat === 'all' || p.category === cat;
                const matchSea = sea === 'all' || p.season === sea;
                return matchTerm && matchCat && matchSea;
            });

            els.productGrid.innerHTML = '';
            filtered.forEach(p => {
                const isSelected = selectedProductIds.has(p.id);
                const card = document.createElement('div');
                card.className = `cat-card shadow-md hover:shadow-lg transition-shadow ${isSelected ? 'selected' : ''}`;
                
                const checkboxHtml = `
                    <div class="absolute top-1 right-1 z-20">
                        <div class="w-6 h-6 rounded-full border-2 flex items-center justify-center transition-all shadow-sm ${isSelected ? 'bg-indigo-600 border-indigo-600' : 'bg-white/80 border-gray-400 hover:border-indigo-500'}">
                            <i class="fas fa-check text-white text-[10px] ${isSelected ? '' : 'hidden'}"></i>
                        </div>
                    </div>
                `;
                card.innerHTML = checkboxHtml + createCardHTML(p, false);
                card.addEventListener('click', () => toggleSelection(p.id));
                els.productGrid.appendChild(card);
            });
            if(filtered.length === 0) document.getElementById('no-results').classList.remove('hidden');
            else document.getElementById('no-results').classList.add('hidden');
        }

        function toggleSelection(id) {
            if (selectedProductIds.has(id)) selectedProductIds.delete(id);
            else selectedProductIds.add(id);
            updateSelectionUI();
            renderList();
        }

        function updateSelectionUI() {
            const count = selectedProductIds.size;
            els.selectedCount.textContent = count;
            if (count > 0) els.selectionBar.classList.remove('translate-y-full');
            else els.selectionBar.classList.add('translate-y-full');
        }

        function changeLayout(mode) {
            if (currentLayout === mode) return;
            currentLayout = mode;
            
            if (mode === 'layout6') {
                els.btn6.classList.add('bg-blue-600', 'border-r', 'border-blue-700'); 
                els.btn6.classList.remove('bg-gray-600', 'hover:bg-gray-500');
                els.btn8.classList.add('bg-gray-600', 'hover:bg-gray-500'); 
                els.btn8.classList.remove('bg-blue-600');
            } else {
                els.btn8.classList.add('bg-blue-600'); 
                els.btn8.classList.remove('bg-gray-600', 'hover:bg-gray-500');
                els.btn6.classList.add('bg-gray-600', 'hover:bg-gray-500'); 
                els.btn6.classList.remove('bg-blue-600', 'border-r', 'border-blue-700');
            }
            
            const allItems = catalogPages.flat().filter(p => p !== null);
            repaginate(allItems);
            renderCatalogPages();
        }

        function initCatalogView() {
            const selectedItems = allProducts.filter(p => selectedProductIds.has(p.id));
            if (selectedItems.length === 0) return;
            repaginate(selectedItems);
            renderCatalogPages();
            els.mainView.classList.remove('active');
            els.catalogView.classList.remove('hidden');
            els.catalogView.classList.add('active');
            window.scrollTo(0, 0);
        }
        
        function repaginate(items) {
            catalogPages = [];
            const perPage = currentLayout === 'layout6' ? 6 : 8;
            for (let i = 0; i < items.length; i += perPage) catalogPages.push(items.slice(i, i + perPage));
            if (catalogPages.length === 0) catalogPages.push([]);
        }

        function showListView() {
            els.catalogView.classList.remove('active');
            els.catalogView.classList.add('hidden');
            els.mainView.classList.add('active');
        }

        function addNewPage() { catalogPages.push([]); }

        function autoSortByCategory() {
            const selectedItems = catalogPages.flat().filter(p => p !== null);
            if (selectedItems.length === 0) return;
            const groups = {};
            selectedItems.forEach(p => {
                const cat = p.category || 'その他';
                if (!groups[cat]) groups[cat] = [];
                groups[cat].push(p);
            });
            const perPage = currentLayout === 'layout6' ? 6 : 8;
            catalogPages = [];
            Object.keys(groups).sort().forEach(cat => {
                const items = groups[cat];
                for (let i = 0; i < items.length; i += perPage) catalogPages.push(items.slice(i, i + perPage));
            });
            renderCatalogPages();
            alert("カテゴリごとにページを分けました！");
        }

        function renderCatalogPages() {
            els.catalogContainer.innerHTML = '';
            sortableInstances.forEach(s => s.destroy());
            sortableInstances = [];
            const perPage = currentLayout === 'layout6' ? 6 : 8;
            const gridClass = currentLayout === 'layout6' ? 'product-grid-6' : 'product-grid-8';

            catalogPages.forEach((pageItems, pageIndex) => {
                const wrapper = document.createElement('div');
                wrapper.className = 'sheet-wrapper';
                const header = document.createElement('div');
                header.className = 'sheet-header no-print';
                header.innerHTML = `<span>PAGE ${pageIndex + 1} <span class="text-xs font-normal opacity-70 ml-2">(${pageItems.length} items)</span></span>${catalogPages.length > 1 ? `<button class="text-xs bg-red-500 hover:bg-red-400 px-2 py-1 rounded" onclick="deletePage(${pageIndex})">削除</button>` : ''}`;
                
                const sheet = document.createElement('div');
                sheet.className = 'sheet';
                
                // タイトルヘッダーの生成を削除しました

                const grid = document.createElement('div');
                grid.className = gridClass;
                grid.dataset.pageIndex = pageIndex;

                const displayItems = [...pageItems];
                while (displayItems.length < perPage) displayItems.push(null);

                displayItems.forEach((p) => {
                    const card = document.createElement('div');
                    if (p) {
                        card.className = 'cat-card';
                        card.dataset.id = p.id;
                        card.innerHTML = createCardHTML(p, true); 
                    } else {
                        card.className = 'cat-card empty-slot';
                    }
                    grid.appendChild(card);
                });

                sheet.appendChild(grid);
                wrapper.appendChild(header);
                wrapper.appendChild(sheet);
                els.catalogContainer.appendChild(wrapper);

                const sortable = new Sortable(grid, {
                    group: 'shared-catalog',
                    animation: 150,
                    ghostClass: 'sortable-ghost',
                    draggable: '.cat-card:not(.empty-slot)',
                    onEnd: function () { updateCatalogDataFromDOM(); }
                });
                sortableInstances.push(sortable);
            });
        }

        function updateCatalogDataFromDOM() {
            const newPages = [];
            const gridSelector = currentLayout === 'layout6' ? '.product-grid-6' : '.product-grid-8';
            document.querySelectorAll(gridSelector).forEach(grid => {
                const pageItems = [];
                grid.querySelectorAll('.cat-card').forEach(card => {
                    const id = card.dataset.id;
                    if (id) {
                        const product = allProducts.find(p => p.id == id);
                        if (product) pageItems.push(product);
                    }
                });
                newPages.push(pageItems);
            });
            catalogPages = newPages;
        }

        function deletePage(index) {
            if (!confirm("このページを削除しますか？")) return;
            catalogPages.splice(index, 1);
            renderCatalogPages();
        }

        // --- カード生成ロジック ---
        function createCardHTML(p, isCatalogMode) {
            const imgs = (p.images || []).slice(0, 3);
            const getImgTag = (src) => {
                if (!src) return `<div class="img-placeholder">No Img</div>`;
                if (src.includes("placehold.co")) return `<div class="img-placeholder text-red-400">Err</div>`;
                return `<img src="${src}" class="img-content">`;
            };

            const imgMain = getImgTag(imgs[0]);
            const imgSub1 = getImgTag(imgs[1]);
            const imgSub2 = getImgTag(imgs[2]);

            // ----------------------------------------
            // パターンA: カタログ作成用
            // ----------------------------------------
            if (isCatalogMode) {
                const composition = p.composition !== "N/A" ? p.composition : "";
                const inseam = p.inseam ? p.inseam : "";
                const retailPrice = p.price_retail ? `¥${p.price_retail.toLocaleString()}` : "-";
                const wholesalePrice = p.price_wholesale ? `@${p.price_wholesale.toLocaleString()}` : "-";
                
                const sizes = p.sizes.length > 0 ? p.sizes : ['F'];
                const colors = p.colors.length > 0 ? p.colors : ['-'];

                let sizeHeaderHtml = '<th class="cl-col-color"></th>'; 
                sizes.forEach(s => { sizeHeaderHtml += `<th>${s}</th>`; });
                sizeHeaderHtml += '<th class="cl-col-total">計</th>';

                let rowsHtml = '';
                colors.forEach(c => {
                    // カラー画像の有無チェック
                    const colorImgSrc = colorMaster[c];
                    let imgContent = '';
                    let wrapClass = 'color-cell-img-wrap';
                    
                    if (colorImgSrc) {
                        imgContent = `<img src="${colorImgSrc}" class="color-img-overlay">`;
                        wrapClass += ' has-image';
                    } else {
                         // 画像がない場合はプラスアイコンなどを表示して場所を明示
                        imgContent = `<i class="fas fa-plus text-[10px] text-gray-300"></i>`;
                    }
                    
                    const colorCellContent = `
                        <div class="color-cell-content" title="クリックして画像を登録" onclick="triggerColorUpload('${c}')">
                             <div class="${wrapClass}">${imgContent}</div>
                             <span class="color-cell-text">${c}</span>
                        </div>
                    `;

                    let cells = `<td class="cl-col-color p-0">${colorCellContent}</td>`;
                    sizes.forEach(() => { cells += `<td></td>`; });
                    cells += `<td></td>`;
                    rowsHtml += `<tr>${cells}</tr>`;
                });

                return `
                    <div class="catalog-layout relative group">
                        <!-- 編集ボタン -->
                        <button onclick="openEditModal('${p.id}')" class="edit-btn">
                            <i class="fas fa-pencil-alt"></i> 編集
                        </button>
                    
                        <!-- 上段 -->
                        <div class="cl-top-section">
                            <div class="cl-image-area">
                                <div class="img-grid-container">
                                    <div class="img-cell img-cell-main">
                                        ${imgMain}
                                        ${p.kariHinban ? `<div class="absolute top-1 left-1 bg-red-100 text-red-600 px-1 text-[8px] rounded border border-red-200 font-bold z-10">代替品: ${p.kariHinban}</div>` : ''}
                                    </div>
                                    <div class="img-cell img-cell-sub1">${imgSub1}</div>
                                    <div class="img-cell img-cell-sub2">${imgSub2}</div>
                                </div>
                            </div>
                            <div class="cl-spec-area">
                                <table class="cl-spec-table">
                                    <tr><th>品番</th><td class="cl-val-lg">${p.id}</td></tr>
                                    <tr><th>品名</th><td style="white-space:normal;">${p.name}</td></tr>
                                    <tr><th>混率</th><td style="white-space:normal; font-size:0.9em;">${composition}</td></tr>
                                    <tr><th>股下</th><td>${inseam}</td></tr>
                                    <tr><th>参考売価</th><td class="cl-price-val">${retailPrice}</td></tr>
                                    <tr><th>下代</th><td class="cl-wholesale-val">${wholesalePrice}</td></tr>
                                </table>
                            </div>
                        </div>
                        
                        <!-- 下段: マトリクス表 -->
                        <div class="cl-matrix-area">
                            <div class="cl-matrix-header-row"><span class="cl-sub-id">${p.id}</span></div>
                            <table class="cl-order-table">
                                <thead><tr>${sizeHeaderHtml}</tr></thead>
                                <tbody>${rowsHtml}</tbody>
                            </table>
                        </div>
                    </div>
                `;
            } 
            
            // ----------------------------------------
            // パターンB: 一覧画面用
            // ----------------------------------------
            else {
                return `
                    <div class="h-[60%] border-b border-black pointer-events-none">
                        <table class="mini-table">
                            <tr><th colspan="3" class="header-status">${p.status}</th></tr>
                            <tr>
                                <td class="bg-white text-center w-[25%]">品番</td>
                                <td class="text-center font-bold w-[35%]">${p.id}</td>
                                <td class="text-center w-[40%] border-b-0">展開色</td>
                            </tr>
                            <tr>
                                <td class="bg-white text-center">上代</td>
                                <td class="text-center font-bold">¥${p.price_retail.toLocaleString()}</td>
                                <td rowspan="5" class="p-[1px] align-top leading-[1.2] whitespace-normal">
                                    ${p.colors.join('<br>')}
                                </td>
                            </tr>
                            <tr>
                                <td class="bg-white text-center">下代</td>
                                <td class="text-center price-wholesale">¥${p.price_wholesale.toLocaleString()}</td>
                            </tr>
                            <tr><td class="bg-white text-center">生地No</td><td class="text-center scale-90 origin-left">${p.fabric_number}</td></tr>
                            <tr><td class="bg-white text-center">素材名</td><td class="text-center scale-90 origin-left">${p.material_name}</td></tr>
                            <tr><td class="bg-white text-center">混率</td><td class="text-center scale-90 origin-left">${p.composition || '-'}</td></tr>
                            <tr>
                                <td class="bg-white text-center border-t border-black">サイズ</td>
                                <td colspan="2" class="text-center border-t border-black">${p.sizes.join(' ')}</td>
                            </tr>
                            <tr>
                                <td class="bg-white text-center border-t border-black">品名</td>
                                <td colspan="2" class="text-left pl-1 font-bold border-t border-black truncate">${p.name}</td>
                            </tr>
                        </table>
                    </div>
                    <div class="h-[40%] relative p-[2px] flex justify-center items-end gap-1 pointer-events-none">
                        ${imgMain}
                    </div>
                `;
            }
        }

        // --- カラー画像アップロード関連 ---
        function triggerColorUpload(colorName) {
            // クリックイベントがバブリングしてカード選択が発火しないようにする
            event.stopPropagation();
            
            pendingColorUpload = { colorName: colorName };
            els.colorInput.click();
        }

        function handleColorUploadFile(e) {
            if (!pendingColorUpload || !e.target.files[0]) return;
            const file = e.target.files[0];
            const colorName = pendingColorUpload.colorName;
            
            // 簡易ローディング表示
            els.loading.classList.remove('hidden');
            
            // 画像リサイズ (サムネイル化) 
            const reader = new FileReader();
            reader.onload = function(ev) {
                const img = new Image();
                img.onload = function() {
                    const canvas = document.createElement('canvas');
                    const ctx = canvas.getContext('2d');
                    
                    // アイコンサイズにリサイズ (サイズを200pxに拡大)
                    const MAX_SIZE = 200;
                    let w = img.width;
                    let h = img.height;
                    
                    if (w > h) {
                        if (w > MAX_SIZE) { h *= MAX_SIZE / w; w = MAX_SIZE; }
                    } else {
                        if (h > MAX_SIZE) { w *= MAX_SIZE / h; h = MAX_SIZE; }
                    }
                    
                    canvas.width = w;
                    canvas.height = h;
                    ctx.drawImage(img, 0, 0, w, h);
                    
                    const base64 = canvas.toDataURL('image/png');
                    
                    // GASへ送信
                    google.script.run
                        .withSuccessHandler(res => {
                            els.loading.classList.add('hidden');
                            if (res.error) {
                                alert("アップロード失敗: " + res.error);
                            } else {
                                // 成功したらローカルを更新して再描画
                                colorMaster[colorName] = base64;
                                renderCatalogPages();
                            }
                            // inputリセット
                            els.colorInput.value = '';
                            pendingColorUpload = null;
                        })
                        .withFailureHandler(err => {
                            els.loading.classList.add('hidden');
                            alert("通信エラー: " + err);
                            els.colorInput.value = '';
                            pendingColorUpload = null;
                        })
                        .uploadColorImage(colorName, base64);
                };
                img.src = ev.target.result;
            };
            reader.readAsDataURL(file);
        }


        // --- 編集モーダル関連 (以下変更なし、省略可能だが全体出力のため記載) ---
        function openEditModal(id) {
            const product = allProducts.find(p => p.id == id);
            if (!product) return;
            editingProduct = JSON.parse(JSON.stringify(product));
            if(!editingProduct.images) editingProduct.images = [];
            renderEditModalContent();
            els.modal.classList.remove('hidden');
        }
        
        function renderEditModalContent() {
            if (!editingProduct) return;
            const p = editingProduct;
            els.modalBody.innerHTML = `
                <h3 class="text-2xl font-bold mb-6 text-gray-800">商品情報の編集</h3>
                <form id="edit-form" class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
                        <h4 class="font-bold text-lg mb-3 flex items-center"><i class="fas fa-images mr-2 text-indigo-600"></i>画像管理</h4>
                        <div id="image-edit-list" class="space-y-4 mb-4">
                            ${p.images.length === 0 ? '<p class="text-gray-400 text-center py-4">画像がありません</p>' : ''}
                            ${p.images.map((imgSrc, idx) => `
                                <div class="relative group border border-gray-300 bg-white p-2 rounded shadow-sm">
                                    <div class="flex items-center justify-between mb-1"><span class="text-xs font-bold bg-gray-200 px-2 py-0.5 rounded text-gray-600">No.${idx + 1}</span><button type="button" onclick="removeImage(${idx})" class="text-red-500 hover:text-red-700 text-sm font-bold px-2"><i class="fas fa-trash-alt"></i> 削除</button></div>
                                    <div class="h-48 flex items-center justify-center bg-gray-100 rounded overflow-hidden"><img src="${imgSrc}" class="max-h-full max-w-full object-contain"></div>
                                </div>
                            `).join('')}
                        </div>
                        <div class="border-t-2 border-dashed border-gray-300 pt-4 mt-6">
                            <label class="block w-full cursor-pointer bg-white border border-gray-300 hover:border-indigo-500 text-gray-600 hover:text-indigo-600 py-3 px-4 rounded shadow-sm text-center transition">
                                <i class="fas fa-plus-circle text-xl mb-1 block"></i><span class="font-bold">画像を追加する</span>
                                <input type="file" accept="image/*" class="hidden" onchange="handleImageUpload(this)">
                            </label>
                        </div>
                    </div>
                    <div class="space-y-5">
                        <h4 class="font-bold text-lg mb-1 border-b pb-2"><i class="fas fa-edit mr-2 text-indigo-600"></i>基本情報</h4>
                        <div class="grid grid-cols-2 gap-4">
                            <div><label class="block text-sm font-bold text-gray-700">品番</label><input type="text" value="${p.id}" class="mt-1 block w-full bg-gray-200 border border-gray-300 rounded p-2 text-gray-600 font-mono" disabled></div>
                            <div><label class="block text-sm font-bold text-gray-700">品名</label><input type="text" id="edit-name" value="${p.name}" class="mt-1 block w-full border border-gray-300 rounded p-2" onchange="updateEditingProduct('name', this.value)"></div>
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div><label class="block text-sm font-bold text-gray-700">参考売価</label><input type="number" id="edit-retail" value="${p.price_retail || ''}" class="mt-1 block w-full border border-gray-300 rounded p-2" onchange="updateEditingProduct('price_retail', Number(this.value))"></div>
                            <div><label class="block text-sm font-bold text-gray-700">下代</label><input type="number" id="edit-wholesale" value="${p.price_wholesale || ''}" class="mt-1 block w-full border border-gray-300 rounded p-2" onchange="updateEditingProduct('price_wholesale', Number(this.value))"></div>
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div><label class="block text-sm font-bold text-gray-700">混率</label><textarea id="edit-composition" rows="2" class="mt-1 block w-full border border-gray-300 rounded p-2 text-sm" onchange="updateEditingProduct('composition', this.value)">${p.composition || ''}</textarea></div>
                            <div><label class="block text-sm font-bold text-gray-700">股下</label><input type="text" id="edit-inseam" value="${p.inseam || ''}" class="mt-1 block w-full border border-gray-300 rounded p-2" onchange="updateEditingProduct('inseam', this.value)"></div>
                        </div>
                        <div class="bg-blue-50 p-3 rounded border border-blue-100">
                            <label class="block text-sm font-bold text-blue-800 mb-2">サイズ展開</label>
                            <div class="flex flex-wrap gap-2 mb-2">
                                ${p.sizes.map((s, i) => `<div class="flex items-center bg-white border border-blue-200 rounded px-2 py-1 shadow-sm"><span class="text-sm mr-2 font-bold">${s}</span><button type="button" onclick="removeEditItem('sizes', ${i})" class="text-red-400 hover:text-red-600 font-bold">&times;</button></div>`).join('')}
                            </div>
                            <div class="flex gap-2">
                                <input type="text" id="new-size-input" placeholder="追加" class="flex-1 border border-gray-300 rounded px-2 py-1 text-sm">
                                <button type="button" onclick="addEditItem('sizes')" class="bg-blue-600 text-white px-3 py-1 rounded text-sm hover:bg-blue-700">追加</button>
                            </div>
                        </div>
                        <div class="bg-green-50 p-3 rounded border border-green-100">
                            <label class="block text-sm font-bold text-green-800 mb-2">カラー展開</label>
                            <div class="flex flex-wrap gap-2 mb-2">
                                ${p.colors.map((c, i) => `<div class="flex items-center bg-white border border-green-200 rounded px-2 py-1 shadow-sm"><span class="text-sm mr-2 font-bold">${c}</span><button type="button" onclick="removeEditItem('colors', ${i})" class="text-red-400 hover:text-red-600 font-bold">&times;</button></div>`).join('')}
                            </div>
                            <div class="flex gap-2">
                                <input type="text" id="new-color-input" placeholder="追加" class="flex-1 border border-gray-300 rounded px-2 py-1 text-sm">
                                <button type="button" onclick="addEditItem('colors')" class="bg-green-600 text-white px-3 py-1 rounded text-sm hover:bg-green-700">追加</button>
                            </div>
                        </div>
                        <div class="flex justify-end pt-6 mt-8 gap-4 border-t">
                            <button type="button" onclick="document.getElementById('modal').classList.add('hidden')" class="px-6 py-3 text-gray-600 hover:bg-gray-100 rounded border border-gray-300">キャンセル</button>
                            <button type="button" onclick="saveEditedProduct()" class="px-8 py-3 bg-indigo-600 text-white rounded font-bold hover:bg-indigo-700 shadow-lg transform hover:-translate-y-0.5 transition">決定して閉じる</button>
                        </div>
                    </div>
                </form>
            `;
        }
        
        function updateEditingProduct(key, value) { if(editingProduct) editingProduct[key] = value; }
        function removeEditItem(type, index) { if(editingProduct) { editingProduct[type].splice(index, 1); renderEditModalContent(); } }
        function addEditItem(type) {
            if(!editingProduct) return;
            const input = document.getElementById(type === 'sizes' ? 'new-size-input' : 'new-color-input');
            const val = input.value.trim();
            if(val) { editingProduct[type].push(val); renderEditModalContent(); }
        }
        function handleImageUpload(input) {
            if (!editingProduct || !input.files[0]) return;
            const reader = new FileReader();
            reader.onload = function(e) { editingProduct.images.push(e.target.result); renderEditModalContent(); };
            reader.readAsDataURL(input.files[0]);
        }
        function removeImage(index) {
            if (editingProduct && confirm("削除しますか？")) { editingProduct.images.splice(index, 1); renderEditModalContent(); }
        }
        function saveEditedProduct() {
            if(!editingProduct) return;
            const idx = allProducts.findIndex(p => p.id === editingProduct.id);
            if(idx > -1) allProducts[idx] = editingProduct;
            updateCatalogPagesData(editingProduct);
            renderCatalogPages();
            els.modal.classList.add('hidden');
        }
        function updateCatalogPagesData(updatedProduct) {
            catalogPages = catalogPages.map(page => page.map(p => (p && p.id === updatedProduct.id) ? updatedProduct : p));
        }

        // --- 保存・読み込み機能 ---
        function saveCurrentCatalog() {
            const title = els.catalogTitleInput.value.trim();
            if(!title) { alert("企画書タイトルを入力してください"); return; }
            const flatItems = catalogPages.flat().filter(Boolean);
            if(flatItems.length === 0) { alert("商品が選択されていません"); return; }
            const saveData = { title: title, date: new Date().toLocaleString('ja-JP'), layout: currentLayout, pages: catalogPages };
            try {
                let savedList = JSON.parse(localStorage.getItem(STORAGE_KEY) || "[]");
                savedList.unshift(saveData);
                if(savedList.length > 10) savedList = savedList.slice(0, 10);
                localStorage.setItem(STORAGE_KEY, JSON.stringify(savedList));
                alert(`「${title}」を一時保存しました。`);
            } catch(e) { alert("保存に失敗しました: " + e.message); }
        }
        function showSavedCatalogs() {
            const list = JSON.parse(localStorage.getItem(STORAGE_KEY) || "[]");
            els.modalBody.innerHTML = list.length === 0 ? 
                `<div class="text-center py-12"><p class="text-gray-500">保存された企画書はありません</p><button onclick="document.getElementById('modal').classList.add('hidden')" class="mt-6 px-6 py-2 bg-gray-500 text-white rounded">閉じる</button></div>` :
                `<h3 class="text-2xl font-bold mb-6 text-gray-800">保存済み一覧</h3><div class="grid gap-4">${list.map((item, idx) => `
                    <div class="border p-4 rounded flex justify-between items-center hover:bg-gray-50">
                        <div><h4 class="font-bold text-indigo-700">${item.title}</h4><div class="text-xs text-gray-500">${item.date}</div></div>
                        <div>
                            <button onclick="loadCatalog(${idx})" class="bg-indigo-600 text-white px-3 py-1 rounded mr-2">開く</button>
                            <button onclick="deleteCatalog(${idx})" class="text-red-500 px-2"><i class="fas fa-trash"></i></button>
                        </div>
                    </div>`).join('')}</div><div class="text-right mt-6"><button onclick="document.getElementById('modal').classList.add('hidden')" class="px-6 py-2 text-gray-600 border rounded">閉じる</button></div>`;
            els.modal.classList.remove('hidden');
        }
        function loadCatalog(index) {
            if(!confirm("現在の内容を破棄して開きますか？")) return;
            const target = JSON.parse(localStorage.getItem(STORAGE_KEY))[index];
            catalogPages = target.pages;
            currentLayout = target.layout || 'layout6';
            els.catalogTitleInput.value = target.title;
            if(currentLayout === 'layout6') els.btn6.click(); else els.btn8.click();
            
            // マージ
            const savedProducts = catalogPages.flat().filter(Boolean);
            savedProducts.forEach(sp => {
                const idx = allProducts.findIndex(p => p.id === sp.id);
                if(idx > -1) allProducts[idx] = sp;
            });
            selectedProductIds.clear();
            savedProducts.forEach(p => selectedProductIds.add(p.id));
            updateSelectionUI();
            renderCatalogPages();
            els.mainView.classList.remove('active');
            els.catalogView.classList.remove('hidden');
            els.catalogView.classList.add('active');
            window.scrollTo(0, 0);
            els.modal.classList.add('hidden');
        }
        function deleteCatalog(index) {
            if(!confirm("削除しますか？")) return;
            const list = JSON.parse(localStorage.getItem(STORAGE_KEY));
            list.splice(index, 1);
            localStorage.setItem(STORAGE_KEY, JSON.stringify(list));
            showSavedCatalogs();
        }

    </script>
</body>
</html>
